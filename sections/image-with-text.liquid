{% comment %}
Custom Image with Text Section
Author: GPT-5
{% endcomment %}

<section class="custom-image-text" 
  style="
    padding-top: {{ section.settings.padding_top | default: 40 }}px;
    padding-bottom: {{ section.settings.padding_bottom | default: 40 }}px;
  "
>
  <div class="page-width {{ section.settings.custom_class }}">
    <div class="custom-image-text__wrapper" 
      style="display: flex; flex-direction: {% if section.settings.image_position == 'right' %}row-reverse{% else %}row{% endif %}; align-items: center; gap: 40px; flex-wrap: wrap;">
      
      <!-- Image -->
      {% if section.settings.image != blank %}
        <div class="custom-image-text__image" style="flex: 1; text-align: center;">
          <img src="{{ section.settings.image | img_url: '800x' }}" alt="{{ section.settings.heading | escape }}" style="max-width: 100%; height: auto; border-radius: 12px;">
        </div>
      {% endif %}

      <!-- Text Content -->
      <div class="custom-image-text__content" style="flex: 1;">
        {% if section.settings.heading != blank %}
          <h2 style="font-size: 2rem; font-weight: bold; margin-bottom: 10px;">{{ section.settings.heading }}</h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <div style="margin-bottom: 20px; color: #555;">{{ section.settings.description }}</div>
        {% endif %}

        {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <a href="{{ section.settings.button_link }}" class="btn" 
            style="background-color: {{ section.settings.button_color }};
                   color: #fff; 
                   padding: 10px 20px; 
                   border-radius: 6px;
                   text-decoration: none;
                   display: inline-block;">
            {{ section.settings.button_label }}
          </a>
        {% endif %}
      </div>

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Image with Text",
  "settings": [
    {
        "type": "text",
        "id": "custom_class",
        "label": "custom class"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Proudly Made in USA"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Our products are built with care and craftsmanship to meet the highest standards.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#002868"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Custom Image + Text Section"
    }
  ]
}
{% endschema %}
