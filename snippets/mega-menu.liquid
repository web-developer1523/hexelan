  <script>
  document.addEventListener("DOMContentLoaded", () => {
    const headers = document.querySelectorAll('.mega-menu h3');
    const allMenus = document.querySelectorAll('.mega-menu ul');
    const imageContainers = document.querySelectorAll('.images-block .img-container');
  
    function showBrandImages(brand) {
      imageContainers.forEach(img => {
        if (img.dataset.brand === brand) {
          img.classList.add('active');
        } else {
          img.classList.remove('active');
        }
      });
    }
  
    headers.forEach(header => {
      header.addEventListener('mouseenter', () => {
        // Hide all menus
        allMenus.forEach(menu => menu.classList.remove('active'));
        const nextMenu = header.nextElementSibling;
        if (nextMenu && nextMenu.tagName === 'UL') {
          nextMenu.classList.add('active');
        }
  
        // Show corresponding images
        const brand = header.closest('.inner-col').dataset.brand;
        showBrandImages(brand);
      });
    });
  
    // Default show Apple images
    showBrandImages('apple');
  });
  </script>
  